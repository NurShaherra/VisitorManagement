<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a15031777.visitormanagementsystem.AddVisitor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="37dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Visitor"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp"
                android:layout_marginBottom="19dp"
                android:layout_alignBottom="@+id/imageButton"
                android:layout_toRightOf="@+id/imageButton"
                android:layout_toEndOf="@+id/imageButton"
                android:layout_marginLeft="14dp"
                android:layout_marginStart="14dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton"
                android:layout_below="@+id/imageButton"
                android:layout_marginTop="25dp"
                android:text="1." />

            <TextView
                android:id="@+id/textViewCreateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewTitle"
                android:layout_alignStart="@+id/textViewTitle"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginTop="25dp"
                android:text="@string/fullname" />

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewCreateDate"
                android:layout_alignStart="@+id/textViewCreateDate"
                android:layout_below="@+id/textViewCreateDate"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextUserName"
                android:layout_alignStart="@+id/editTextUserName"
                android:layout_below="@+id/editTextUserName"
                android:layout_marginTop="25dp"
                android:text="@string/email" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView24"
                android:layout_alignStart="@+id/textView24"
                android:layout_below="@+id/textView24"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextEmail"
                android:layout_alignStart="@+id/editTextEmail"
                android:layout_below="@+id/editTextEmail"
                android:layout_marginTop="25dp"
                android:text="@string/mobileNum" />

            <EditText
                android:id="@+id/editTextUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editTextEmail"
                android:layout_alignRight="@+id/editTextEmail"
                android:layout_below="@+id/textView26"
                android:ems="10"
                android:inputType="phone" />
            //2.

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextUnit"
                android:layout_alignStart="@+id/editTextUnit"
                android:layout_below="@+id/editTextUnit"
                android:layout_marginTop="25dp"
                android:text="2." />

            <TextView
                android:id="@+id/textViewCreateDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="25dp"
                android:text="@string/fullname" />

            <EditText
                android:id="@+id/editTextUserName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textViewCreateDate2"
                android:layout_alignStart="@+id/textViewCreateDate2"
                android:layout_below="@+id/textViewCreateDate2"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView242"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextUserName2"
                android:layout_alignStart="@+id/editTextUserName2"
                android:layout_below="@+id/editTextUserName2"
                android:layout_marginTop="25dp"
                android:text="@string/email" />

            <EditText
                android:id="@+id/editTextEmail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView242"
                android:layout_alignStart="@+id/textView242"
                android:layout_below="@+id/textView242"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView262"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editTextEmail2"
                android:layout_alignStart="@+id/editTextEmail2"
                android:layout_below="@+id/editTextEmail2"
                android:layout_marginTop="25dp"
                android:text="@string/mobileNum" />

            <EditText
                android:id="@+id/editTextUnit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editTextEmail2"
                android:layout_alignRight="@+id/editTextEmail2"
                android:layout_below="@+id/textView262"
                android:ems="10"
                android:inputType="phone" />

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/editTextUnit2"
                android:layout_alignRight="@+id/editTextUnit2"
                android:layout_below="@+id/editTextUnit2"
                android:layout_marginTop="25dp"
                android:text="@string/save" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
